<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewHeaderStylesBug.MainPage">

    <ContentPage.Resources>
        <StyleSheet Source="/Assets/styles.css" />
    </ContentPage.Resources>

    <StackLayout>
        <ListView x:Name="listView" HasUnevenRows="true">
            <ListView.Header>
                <StackLayout>
                    <Label Text="Normal Text" />
                    <Label Text="Styled Text" StyleClass="mainPageTitle" />
                </StackLayout>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid
                            Padding="10"
                            RowDefinitions="Auto,*"
                            ColumnDefinitions="Auto,*">
                            <Image Grid.RowSpan="2" Source="{Binding ImageUrl}" Aspect="AspectFill" />
                            <Label Grid.Column="1" Text="{Binding Name}" StyleClass="mainPageTitle" />
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Location}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>

